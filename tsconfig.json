{
  "compilerOptions": {
    "rootDir": "./src",
    "paths": {},
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "ES6",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "outDir": "./dist/cjs",
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "include": [
      "jest",
      "node"
    ]
  }
}